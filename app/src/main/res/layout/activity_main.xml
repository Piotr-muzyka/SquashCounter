<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowActionBar="false"
    tools:context=".MainActivity"
    android:background="@drawable/squash">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/Player_background"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="@string/Button_text5"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_a_score"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text1"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/set"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text2"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/match"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text3"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/match" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@color/Button_text_color"
                            android:gravity="center"
                            android:onClick="freeThrow"
                            android:text="SCORE"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@color/Button_text_color"
                            android:gravity="center"
                            android:onClick="twoPoints"
                            android:text="@string/Button_text2"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@color/Button_text_color"
                            android:gravity="center"
                            android:onClick="threePoints"
                            android:text="MATCH"
                            android:textSize="25dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/Player_background"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="@string/Button_text5"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_b_score"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text1"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/set2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text2"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/match2"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/score_height"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="@dimen/display_text_width"
                            android:layout_height="@dimen/display_text_heigth"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/Text_background"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/Button_text3"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/image_width"
                            android:layout_height="@dimen/image_height"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/match" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@color/Button_text_color"
                            android:onClick="freeThrow2"
                            android:text="SCORE"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@color/Button_text_color"
                            android:onClick="twoPoints2"
                            android:text="@string/Button_text2"
                            android:textSize="25dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@color/Button_text_color"
                            android:onClick="threePoints2"
                            android:padding="10dp"
                            android:text="MATCH"
                            android:textSize="25dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:layout_width="@dimen/reset_width"
                android:layout_height="wrap_content"
                android:background="@color/Button_text_color"
                android:gravity="center"
                android:onClick="reset"
                android:text="reset"
                android:textAllCaps="true"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
