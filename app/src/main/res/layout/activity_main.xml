<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowActionBar="false"
    tools:context=".MainActivity"
    android:background="@drawable/squash">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#8090a4ae"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"

                    android:padding="4dp"
                    android:text="Player A"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_a_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="4dp"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/TextView2"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/score"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/TextView3"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="@string/sets"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/match"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:padding="4dp"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/TextView4"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="4dp"
                            android:text="@string/matches"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/match" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="#80b2ebf2"
                            android:gravity="center"
                            android:onClick="freeThrow"
                            android:text="@string/score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="#80b2ebf2"
                            android:gravity="center"
                            android:onClick="twoPoints"
                            android:text="@string/button_set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/Button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="#80b2ebf2"
                            android:gravity="center"
                            android:onClick="threePoints"
                            android:text="@string/button_match" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/LayoutMarginTop"
                    android:background="#8090a4ae"
                    android:fontFamily="sans-serif"

                    android:gravity="center_horizontal"
                    android:padding="@dimen/TextViewPadding"
                    android:text="@string/playerb"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/PlayerTextSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_b_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ScoreTextSize" />

                        <TextView
                            android:id="@+id/TextView6"
                            android:layout_width="@dimen/TextViewWidth"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/score"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/ScoreTextSize" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/ImageViewWidth"
                            android:layout_height="@dimen/ImageViewHeight"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/set2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/SetsTextSize" />

                        <TextView
                            android:id="@+id/TextView7"
                            android:layout_width="@dimen/TextViewWidth"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/sets"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/SetsTextSize" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/ImageViewWidth"
                            android:layout_height="@dimen/ImageViewHeight"
                            android:layout_gravity="center"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/match2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/initial_value"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/MatchesTextSize" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="@dimen/TextViewWidth"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            android:fontFamily="sans-serif"
                            android:padding="@dimen/TextViewPadding"
                            android:text="@string/matches"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/MatchesTextSize" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/ImageViewWidth"
                            android:layout_height="@dimen/ImageViewHeight"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80FFFFFF"
                            app:srcCompat="@drawable/match" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#80b2ebf2"
                            android:onClick="freeThrow2"
                            android:layout_margin="@dimen/ButtonLayoutMargin"
                            android:text="@string/button_score" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/ButtonLayoutMargin"
                            android:layout_weight="1"
                            android:background="#80b2ebf2"
                            android:onClick="twoPoints2"
                            android:text="@string/button_set" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/ButtonLayoutMargin"
                            android:layout_weight="1"
                            android:background="#80b2ebf2"
                            android:onClick="threePoints2"
                            android:padding="@dimen/ButtonPadding"
                            android:text="@string/button_match" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <Button
                android:id="@+id/button7"
                android:layout_width="@dimen/ButtonLayoutWidth"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/ButtonLayoutMargin"
                android:background="#80b2ebf2"
                android:gravity="center"
                android:onClick="reset"
                android:text="@string/button_reset"
                android:textAllCaps="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
